
@{
    ViewData["Title"] = "Login";
}


    <head>
        <environment include="Development">
            <link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap.min.css">
            <link rel="stylesheet" href="~/assets/fonts/font-awesome.min.css">
            <link rel="stylesheet" href="~/assets/css/Login-Box-En.css">
            <link rel="stylesheet" href="~/assets/css/styles.css">

            </environment>
    </head>

    
        <div>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="text-center" id="logintitle">Before you can buy you need to login</h2>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="d-flex flex-column justify-content-center" id="login-box">
                            <div class="login-box-header">
                                <h4 id="loginlinkedin" style="color:rgb(139,139,139);margin-bottom:0px;font-weight:400;font-size:27px;">Login</h4>
                            </div>
                            <div id="loginrow" class="login-box-content">
                                <div class="fb-login box-shadow"><a class="d-flex flex-row align-items-center social-login-link" href="#"><i class="fa fa-linkedin" style="margin-left:0px;padding-right:20px;padding-left:22px;width:56px;"></i>Sign in with LinkedIn</a></div>
                                <div class="gp-login box-shadow"></div>
                            </div>
                            <div class="d-flex flex-row align-items-center login-box-seperator-container">
                                <div class="login-box-seperator"></div>
                                <div class="login-box-seperator-text">
                                    <p style="margin-bottom:0px;padding-left:10px;padding-right:10px;font-weight:400;color:rgb(201,201,201);">or</p>
                                </div>
                                <div class="login-box-seperator"></div>
                            </div>
                            <div class="email-login" style="background-color:#ffffff;"></div>
                            <div class="submit-row" style="margin-bottom:8px;padding-top:0px;"></div>
                            <div id="login-box-footer" style="padding:10px 20px;padding-bottom:23px;padding-top:18px;">
                                <p id="loginfooterrow" style="margin-bottom:0px;">Don't you have an account?<a id="register-link" href="#">Sign Up!</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6"><img src="~/assets/img/login.jpg" style="padding: 20px;"></div>
                </div>
            </div>
        </div>
        <environment include="Development">
            <script src="~/assets/js/jquery.min.js"></script>
            <script src="~/assets/bootstrap/js/bootstrap.min.js"></script>
        </environment>
    

